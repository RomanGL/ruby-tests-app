<div class="container">
  <%= form_with(model: [ @quiz, @question ], remote: request.xhr?, html: {data: {modal: true}}) do |form| %>

    <% if @question.errors.any? %>
      <div class="alert alert-danger mt-3" role="alert">
        <%= t('form_messages.validation_error') %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :'Вопрос' %>

      <% if @question.errors.has_key?(:question) %>
        <%= form.text_field :question, :class => 'form-control is-invalid', :placeholder => 'Введите вопрос' %>

        <div class="invalid-feedback">
          <% @question.errors.full_messages_for(:question).each do |msg| %>
            <%= msg %><br>
          <% end %>
        </div>
      <% else %>
        <%= form.text_field :question, :class => 'form-control', :placeholder => 'Введите вопрос' %>
        <small class="form-text text-muted">
          <%= t('form_messages.required_minimum_input_length', count: 5) %>
        </small>
      <% end %>
    </div>

    <div class="modal-footer">
      <%= form.submit 'Сохранить вопрос',
                      :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>
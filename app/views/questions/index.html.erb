<h1>Список вопросов теста "<%= @quiz.title %>"</h1>

<table>
  <tr>
    <th>Вопрос</th>
    <th></th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td><%= question.question %></td>
      <td>
        <div class="btn-group">
          <%= link_to 'Открыть',
                      quiz_question_path(@quiz, question),
                      class: 'btn btn-success' %>
          <%= link_to 'Изменить',
                      edit_quiz_question_path(@quiz, question),
                      class: 'btn btn-success' %>
          <%= link_to 'Удалить',
                      quiz_question_path(@quiz, question),
                      class: 'btn btn-danger',
                      method: :delete,
                      data: { confirm: 'Вы уверены?' } %>
        </div>
      </td>
    </tr>
  <% end %>
</table>


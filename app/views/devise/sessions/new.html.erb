<% content_for :page_title do %>
  <%= t('views.devise.sessions.new.page_title') %>
<% end %>

<div class="jumbotron py-5">
  <h1 class="display-4 text-center"><%= t('views.devise.sessions.new.jumbo_title') %></h1>
  <p class="lead text-center"><%= t('views.devise.sessions.new.jumbo_description') %></p>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>

    <% if flash[:alert] %>
      <div class="alert alert-danger mt-3" role="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="form-row mt-2">
      <div class="form-group col-6">
        <%= form.label t('views.devise.sessions.new.email') %>
        <%= form.email_field :email,
                             :class => 'form-control',
                             :autofocus => true,
                             :autocomplete => 'email',
                             :placeholder => t('views.devise.sessions.new.enter_email') %>
      </div>

      <div class="form-group col-6">
        <%= form.label t('views.devise.sessions.new.password') %>
        <%= form.password_field :password,
                                :class => 'form-control',
                                :autocomplete => 'current-password',
                                :placeholder => t('views.devise.sessions.new.enter_password') %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="form-check">
          <%= form.check_box :remember_me,
                             :class => 'form-check-input' %>
          <%= form.label :remember_me,
                         t('views.devise.sessions.new.remember'),
                         :class => 'form-check-label' %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= form.submit t('views.devise.sessions.new.sign_in_button'),
                      :class => 'btn btn-success px-5' %>
    </div>
  <% end %>

  <hr class="my-4">
  <div class="text-center">
    <p><%= t('views.devise.sessions.new.no_account_yet') %></p>
    <p class="lead">
      <%= link_to t('views.devise.sessions.new.sign_up_button'),
                  new_registration_path(resource_name),
                  {:class => 'btn btn-primary'} %>
    </p>
  </div>
</div>
<div class="container">
  <%= form_with(model: @quiz, remote: request.xhr?, html: {data: {modal: true}}) do |form| %>

    <% if @quiz.errors.any? %>
      <div class="alert alert-danger mt-3" role="alert">
        <%= t('form_messages.validation_error') %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :'Название' %>

      <% if @quiz.errors.has_key?(:title) %>
        <%= form.text_field :title, :class => 'form-control is-invalid', :placeholder => 'Введите название теста' %>

        <div class="invalid-feedback">
          <% @quiz.errors.full_messages_for(:title).each do |msg| %>
            <%= msg %><br>
          <% end %>
        </div>
      <% else %>
        <%= form.text_field :title, :class => 'form-control', :placeholder => 'Введите название теста' %>
        <small class="form-text text-muted">
          <%= t('form_messages.required_minimum_input_length', count: 5) %>
        </small>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :'Описание' %>

      <% if @quiz.errors.has_key?(:description) %>
        <%= form.text_area :description, :class => 'form-control is-invalid', :placeholder => 'Введите описание теста' %>

        <div class="invalid-feedback">
          <% @quiz.errors.full_messages_for(:description).each do |msg| %>
            <%= msg %><br>
          <% end %>
        </div>
      <% else %>
        <%= form.text_area :description, :class => 'form-control', :placeholder => 'Введите описание теста' %>
      <% end %>

      <small class="form-text text-muted">
        <%= t('form_messages.required_input_length', from: 5, to: 1000) %>
      </small>
    </div>

    <div class="modal-footer">
      <%= form.submit 'Сохранить тест',
                      :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>
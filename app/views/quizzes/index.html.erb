
<h1>Список тестов</h1>

<table align = "center">
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th></th>
  </tr>

  <% @quizzes.each do |quiz| %>
    <tr class = "table-active">
      <td><%= quiz.title %></td>
      <td><%= quiz.description %></td>
      <td>
        <div class="btn-group">
          <%= link_to 'Открыть',
                      quiz_path(quiz),
                      class: 'btn btn-success' %>
          <%= link_to 'Изменить',
                      edit_quiz_path(quiz),
                      class: 'btn btn-success' %>
          <%= link_to 'Удалить',
                      quiz_path(quiz),
                      class: 'btn btn-danger',
                      method: :delete,
                      data: { confirm: 'Вы уверены?' } %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to 'Создать тест',
            new_quiz_path,
            class: 'btn btn-success'%>
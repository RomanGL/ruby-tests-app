<h1>Список тестов</h1>

<table>
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th></th>
  </tr>

  <% @quizzes.each do |quiz| %>
    <tr>
      <td><%= quiz.title %></td>
      <td><%= quiz.description %></td>
      <td><%= link_to 'Открыть', quiz_path(quiz) %></td>
      <td><%= link_to 'Изменить', edit_quiz_path(quiz) %></td>
      <td><%= link_to 'Удалить', quiz_path(quiz),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Создать тест', new_quiz_path %>